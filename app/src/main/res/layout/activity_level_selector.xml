<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LevelSelectorActivity">

    <include layout="@layout/header" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <Button
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Page blanche"
            android:onClick="selectEmptyPage"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue"/>

        <Button
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Coloriage facile"
            android:onClick="selectEasyColoring"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Coloriage difficile"
            android:onClick="selectHardColoring"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue" />

    </LinearLayout>
</RelativeLayout>
